<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ProfileActivity">
    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/profile_img"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="NAME"
            android:id="@+id/profile_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="uid"
            android:id="@+id/profile_uid"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8547261353"
            android:textSize="20sp"
            android:id="@+id/profileContact1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8547261353"
            android:textSize="20sp"
            android:id="@+id/profileContract2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bharat nagar"
            android:textSize="20sp"
            android:id="@+id/profileAddress1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New delhi"
            android:textSize="20sp"
            android:id="@+id/profileAddress2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Delhi"
            android:textSize="20sp"
            android:id="@+id/profileAddress3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/25/185"
            android:textSize="20sp"
            android:id="@+id/profileDOJ"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present-"
                android:textSize="20sp"
                android:id="@+id/profile_presents"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absents-"
                android:textSize="20sp"
                android:id="@+id/profileAbsents"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary Upto Now-"
                android:textSize="20sp"
                android:id="@+id/profileSalaryUptoNow"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>